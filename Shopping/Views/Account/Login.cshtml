@model LoginViewModel
@{
    ViewData["Title"] = "Register";
}
<section id="">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-1">
                <div class="login-form">
                    <!-- layout đăng nhập-->
                    <h2>Đăng nhập vào tải khoản của bạn</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="Login" asp-controller="Account">

                        <div class="form-group">
                            <label>Username</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>
                        <button class="btn btn-default">Login</button>
                        <a asp-action="Create" asp-controller="Account">Tạo tài khoản mới</a>

                    </form>
                </div>
            </div>
        </div>
    </div>

</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }